            <StackLayout AbsoluteLayout.LayoutBounds="0.5, 0.25, 160, 160"
                AbsoluteLayout.LayoutFlags="PositionProportional">
                <Frame  CornerRadius="80"
                        Padding="0"
                        Margin="0"
                        HeightRequest="160"
                        WidthRequest="160"
                        IsClippedToBounds="True"
