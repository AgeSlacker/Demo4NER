<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="Demo4NER.Views.BusinessPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout BindingContext="{Binding Business}" Margin="10,0,10,0">
                <Image Source="{Binding ImageSource}"
                       HeightRequest="200"/>
                <StackLayout Orientation="Horizontal">
                    <StackLayout WidthRequest="250">
                        <Label Text="{Binding Name}" 
                            TextColor="#3B5A9A" 
                            FontAttributes="Bold" 
                            FontSize="30"
                            HorizontalTextAlignment="Center" />
                        <Label Text="Restaurante" 
                            TextColor="Black" 
                            FontSize="26"
                            HorizontalTextAlignment="Center"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" HorizontalOptions="EndAndExpand">
                        <Image Source="favorite.png"
                           HorizontalOptions="EndAndExpand"
                           HeightRequest="40" 
                           VerticalOptions="Center"/>
                        <Label HorizontalOptions="FillAndExpand" 
                               VerticalOptions="Center"
                               HorizontalTextAlignment="End" 
                               Margin="0,10,0,0">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="{Binding Rating}"
                                      TextColor="#3B5A9A" 
                                      FontAttributes="Bold" 
                                      FontSize="32"/>
                                    <Span Text="/5" 
                                      TextColor="#3B5A9A" 
                                      FontAttributes="Bold"
                                      FontSize="20"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </StackLayout>
                </StackLayout>
                <Label Text="Morada" 
                       TextColor="#3B5A9A" 
                       FontAttributes="Bold" 
                       FontSize="26"/>
                <Label Text="{Binding WrittenAddress}"
                       FontSize="15"/>
                <Label Text="Descrição" 
                       TextColor="#3B5A9A" 
                       FontAttributes="Bold" 
                       FontSize="26"/>
                <Label Text="{Binding Description}" 
                       FontSize="15"/>
                <Label Text="Contacto" 
                       TextColor="#3B5A9A" 
                       FontAttributes="Bold" 
                       FontSize="26"/>
                <Label Text="{Binding Contact}" 
                       FontSize="15"/>
                <Label Text="Horário"
                       TextColor="#3B5A9A" 
                       FontAttributes="Bold" 
                       FontSize="26"/>
                <Label Text="{Binding Schedule}" 
                       FontSize="15"/>
                <Label Text="Links"
                       TextColor="#3B5A9A" 
                       FontAttributes="Bold" 
                       FontSize="26"/>
                <ListView ItemsSource="{Binding Links}" 
                          ItemTemplate="{StaticResource LinkListTemplate}"
                          SeparatorVisibility="None"
                          SelectionMode="None"
                          HeightRequest="100"/>
                <Label Text="Reviews"
                       TextColor="#3B5A9A" 
                       FontAttributes="Bold" 
                       FontSize="26"/>
                <ListView ItemsSource="{Binding Reviews}"
                          ItemTemplate="{StaticResource ReviewListTemplate}"
                          RowHeight="100"
                          SeparatorVisibility="None"
                          SelectionMode="None"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>